    "version": "0.2.0",
    "configurations": [{
        "name": "Launch",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "${workspaceRoot}/target/debug/testbed.exe",
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [
            {"name":"PATH", "value":"%USERPROFILE%/.rustup/toolchains/stable-x86_64-pc-windows-msvc/bin;${workspaceFolder}/target/debug/deps;%PATH%"},
            // Switch `nightly` to `stable` if you're using Rust stable
            {"name":"CARGO_MANIFEST_DIR", "value": "${workspaceFolder}"}
        ],
    }],
}